<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <title>Amy Zinger's NFT Mint</title>
    <meta name="author" content="Amy Zinger">
    <meta name="description" content="A personal NFT mint for artist Amy Zinger.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation Bar -->
    <%- include('navigation') %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <!-- Header (Banner Area) -->
        <header class="banner">
            <div class="container-fluid h-100 p-0">
                <div class="row h-100 m-0">
                    <div class="col-12 col-md-6 d-flex align-items-center justify-content-start p-0">
                        <div class="text-box p-4 w-100">
                            <h1 class="display-3"><b>A human artist exploring intimacy lost and gained within our invented worlds.</b></h1>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 d-none d-md-block p-0">
                        <!-- Empty column for layout purposes -->
                    </div>
                </div>
            </div>
        </header>

        <!-- Featured -->
        <section class="content-section" id="featured">
            <div class="container">
                <h2 class="section-title">Featured Work</h2>
                <div class="row row-cols-1 row-cols-sm-3 row-cols-lg-3 g-3 text-center justify-content-center">
                    <% projectArray.forEach((item, index) => { %>
                    <div class="col-10">
                        <%- include('projectCard', { image: item.img_url, name: item.project_name, quantity: item.quantity, ident: item.id }) %>
                    </div>
                    <% }) %>
                </div>
                <div class="text-center">
                    <button onclick="location.href='/projects'" class="button mt-3">See More</button>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="./js/index.js"></script>
</body>
</html>
