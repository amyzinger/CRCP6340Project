<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <title>Projects</title>
    <meta name="author" content="Amy Zinger">
    <meta name="description" content="A page for multiple projects.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('navigation') %>

    <!-- Spacer Div -->
    <!-- <div style="height: 80px;"></div>  -->

    <!-- Page Head -->
    <div class="page-head">
      <h1>All Artwork</h1>
    </div>

    <!-- Featured -->
    <div class="container mt-5">
      <% if (featuredProject) { %>
        <div class="row">
          <div class="col-md-6">
            <img src="<%= featuredProject.img_url %>" alt="<%= featuredProject.project_name %>" class="img-fluid">
          </div>
          <div class="col-md-6">
            <h2>Featured Project: <%= featuredProject.project_name %></h2>
            <p><strong>Description:</strong> <%= featuredProject.project_description %></p>
            <p><strong>Quantity:</strong> <%= featuredProject.quantity %></p>
            <p><strong>Price (ETH):</strong> <%= featuredProject.price_eth %></p>
            <p><strong>Open Date (GMT):</strong> <%= new Date(featuredProject.open_date_gmt).toLocaleString() %></p>
          </div>
        </div>
      <% } else { %>
        <h2>No Featured Project</h2>
      <% } %>
    </div>

    <!-- Content Area -->
    <div class="light-grey">
      <div class="container">
        <h2>All Artwork</h2>
        <p>Lorem ipsum dolor sit amet...</p>
      </div>

      <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 text-center justify-content-center">
          <% projectArray.forEach((item, index) => { %>
            <div class="col-10">
              <div class="card-wrapper">
                <%- include('projectCard', { image: item.img_url, name: item.project_name, quantity: item.quantity, ident: item.id }) %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Spacer Div -->
      <div style="height: 80px;"></div> 
    </div>

    <!-- Footer -->
    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="./js/index.js"></script>

</body>
</html>
