<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <title>Projects</title>
    <meta name="author" content="Amy Zinger">
    <meta name="description" content="A page for multiple projects.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav role="navigation" aria-label="Main navigation">
        <%- include('navigation') %>
    </nav>

    <!-- Spacer Div -->
    <div style="height: 80px;" aria-hidden="true"></div>

    <!-- Page Head -->
    <header class="page-head" role="banner">
        <div class="page-head-overlay">
            <h1 class="display-3"><b>Art</b></h1>
        </div>
    </header>

    <!-- Featured -->
    <section class="white" aria-labelledby="featured-project">
      <div class="container">
        <!-- <h2 id="featured-project">Featured Project</h2> -->
      <% if (featuredProject) { %>
        <div class="row">
          <div class="col-md-6 responsive-padding">
            <img src="<%= featuredProject.img_url %>" alt="<%= featuredProject.project_name %>" class="img-fluid">
          </div>
          <div class="col-md-6">
            <h3 id="featured-project">Featured: <%= featuredProject.project_name %></h3>
            <p><%= featuredProject.short_description %></p>
            <p><strong>Quantity:</strong> <%= featuredProject.quantity %></p>
            <p><strong>Price (ETH):</strong> <%= featuredProject.price_eth %></p>
            <p><strong>Open Date (GMT):</strong> <%= new Date(featuredProject.open_date_gmt).toLocaleString() %></p>
            <p><strong>Royalty:</strong> <%= featuredProject.royalty_percent %></p>
            <!-- <p><strong>Active:</strong> <%= featuredProject.active %></p> -->
            <a href="/project/<%= featuredProject.id %>" class="primary-button">Learn More</a>

          </div>
        </div>
      <% } else { %>
        <h2 id="featured-project">No Featured Project</h2>
      <% } %>
      </div>
    </section>

    <!-- Content Area -->
    <section class="light-grey" aria-labelledby="more-work">
      <div class="container">
        <h2 id="more-work">More Work</h2>
        <!-- <p>Lorem ipsum dolor sit amet...</p> -->
      </div>

      <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 text-center justify-content-center">
          <% projectArray.forEach((item, index) => { %>
            <div class="col-10">
              <div class="card-wrapper">
                <%- include('projectCard', { image: item.img_url, name: item.project_name, quantity: item.quantity, ident: item.id }) %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Spacer Div -->
      <div style="height: 80px;" aria-hidden="true"></div> 
    </section>

    <!-- Footer -->
    <footer role="contentinfo">
        <%- include('footer') %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="./js/index.js"></script>

</body>
</html>
