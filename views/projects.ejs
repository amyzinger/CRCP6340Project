<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <title>Projects</title>
    <meta name="author" content="Amy Zinger">
    <meta name="description" content="A page for multiple projects.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation Bar -->
    <%- include('navigation') %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="spacer"></div>
        <div class="display-5 justify-content-center text-center">Projects</div>

        <div class="mb-5">
          <div class="row">
            <div class="row row-cols-1 row-cols-sm-3 row-cols-lg-4 g-3 text-center justify-content-center">
              <% projectArray.forEach((item, index) => { %>
              <div class="col-10">
                <%- include('projectCard', { image: item.img_url, name: item.project_name, quantity: item.quantity, ident: item.id }) %>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('footer') %>

    <script type="module" src="./js/index.js"></script>
</body>
</html>
